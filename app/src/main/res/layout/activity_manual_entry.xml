<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/customborder_dialog"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/a"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/darkblue"

        android:gravity="center"
        android:padding="10dp"
        android:scaleType="fitCenter"
        android:src="@drawable/id" />

    <!--android:src="@drawable/dialog_cross"-->

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/a"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="5dp"
        android:gravity="center_horizontal"
        android:text="Manual Entry "

        android:textColor="@color/blue"
        android:textSize="22sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/name"
        android:orientation="vertical"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.8"
            android:orientation="vertical">

            <ScrollView
                android:id="@+id/layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"


                    android:orientation="vertical">

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/name"
                        android:orientation="vertical">

                        <!--android:minWidth="300dp"-->
                        <!--android:minHeight="400dp"-->


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@color/darkblue"
                            android:gravity="center|center_vertical|center_horizontal"
                            android:padding="10dp"
                            android:text="Details"

                            android:textColor="@color/white"
                            android:textSize="15sp" />

                        <!-- Brief -->
                        <LinearLayout
                            android:id="@+id/namesl"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:layout_marginTop="2dp"
                            android:background="#fff"
                            android:elevation="4dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:gravity="left|center_vertical|center_horizontal"
                                android:padding="5dp"
                                android:text="Enter Names"
                                android:textColor="@color/darkblue" />


                            <EditText
                                android:id="@+id/names"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_weight="1"
                                android:background="@drawable/customborder_dialog"
                                android:gravity="left|center_vertical|center_horizontal"
                                android:inputType="textMultiLine"
                                android:padding="5dp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <!-- Hindi -->
                        <LinearLayout
                            android:id="@+id/nameofpersons"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:layout_marginTop="2dp"
                            android:background="#fff"
                            android:elevation="4dp"
                            android:orientation="horizontal">

                            <TextView

                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:gravity="center|center_vertical|center_horizontal"
                                android:padding="5dp"
                                android:text="Number of Persons"
                                android:textColor="@color/darkblue" />

                            <EditText
                                android:id="@+id/numberpersons"
                                android:layout_width="match_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:background="@drawable/customborder_dialog"
                                android:gravity="center|center_vertical|center_horizontal"
                                android:inputType="number"
                                android:maxLength="1"
                                android:padding="5dp" />

                        </LinearLayout>

                        <!-- English -->
                        <LinearLayout
                            android:id="@+id/vechiclenumber"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:layout_marginTop="2dp"
                            android:background="#fff"
                            android:elevation="4dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:gravity="center|center_vertical|center_horizontal"
                                android:padding="5dp"
                                android:text="Vehicle Number"
                                android:textColor="@color/darkblue" />

                            <EditText
                                android:id="@+id/vehiclenumber"
                                android:layout_width="match_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:maxLines="1"
                                android:maxLength="12"
                                android:background="@drawable/customborder_dialog"
                                android:gravity="center|center_vertical|center_horizontal"
                                android:padding="5dp" />

                        </LinearLayout>


                        <!-- Nothing -->
                        <LinearLayout
                            android:id="@+id/mobilel"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_margin="3dp"
                            android:layout_marginTop="2dp"
                            android:background="#fff"
                            android:elevation="4dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:gravity="left|center_vertical|center_horizontal"
                                android:padding="5dp"
                                android:text="Mobile "
                                android:textColor="@color/darkblue" />

                            <EditText
                                android:id="@+id/mobilenumber"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_weight="1"
                                android:gravity="left|center_vertical|center_horizontal"
                                android:background="@drawable/customborder_dialog"
                                android:inputType="phone"
                                android:padding="5dp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/addressl"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_margin="3dp"
                            android:layout_marginTop="2dp"
                            android:background="#fff"
                            android:elevation="4dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:gravity="left|center_vertical|center_horizontal"
                                android:padding="5dp"
                                android:text="Address"
                                android:textColor="@color/darkblue" />

                            <EditText
                                android:id="@+id/address"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_weight="1"
                                android:background="@drawable/customborder_dialog"
                                android:gravity="left|center_vertical|center_horizontal"
                                android:padding="5dp" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@color/darkblue"
                            android:gravity="center|center_vertical|center_horizontal"
                            android:padding="10dp"
                            android:text="Coming From"

                            android:textColor="@color/white"
                            android:textSize="15sp" />

                        <LinearLayout
                            android:id="@+id/statefroml"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_margin="3dp"
                            android:layout_marginTop="2dp"
                            android:background="#fff"
                            android:elevation="4dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:gravity="center|center_vertical|center_horizontal"
                                android:padding="5dp"
                                android:text="From State"
                                android:textColor="@color/darkblue" />

                            <com.doi.spinnersearchable.SearchableSpinner
                                android:id="@+id/fromstate"
                                android:layout_width="match_parent"
                                android:layout_height="fill_parent"
                                android:layout_margin="10dp"
                                android:background="@drawable/customborder_dialog"
                                android:layout_weight="1"
                                android:fontFamily="@font/raleway_semibold"
                                android:textColor="@color/blue" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/districtfroml"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_margin="3dp"
                            android:layout_marginTop="2dp"
                            android:background="#fff"
                            android:elevation="4dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:gravity="center|center_vertical|center_horizontal"
                                android:padding="5dp"
                                android:text="District"
                                android:textColor="@color/darkblue" />

                            <com.doi.spinnersearchable.SearchableSpinner
                                android:id="@+id/fromdistrict"
                                android:layout_width="match_parent"
                                android:layout_height="fill_parent"
                                android:layout_margin="10dp"
                                android:background="@drawable/customborder_dialog"
                                android:layout_weight="1"
                                android:fontFamily="@font/raleway_semibold"
                                android:textColor="@color/blue" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/placefroml"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_margin="3dp"
                            android:layout_marginTop="2dp"
                            android:background="#fff"
                            android:elevation="4dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:gravity="center|center_vertical|center_horizontal"
                                android:padding="5dp"
                                android:text="From Place"
                                android:textColor="@color/darkblue" />

                            <EditText
                                android:id="@+id/fromplace"
                                android:layout_width="match_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:background="@drawable/customborder_dialog"
                                android:gravity="center|center_vertical|center_horizontal"
                                android:maxLines="1"
                                android:padding="5dp"
                                android:textStyle="bold" />
                        </LinearLayout>


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"

                            android:background="@color/darkblue"
                            android:gravity="center|center_vertical|center_horizontal"
                            android:padding="10dp"
                            android:text="Going To"

                            android:textColor="@color/white"
                            android:textSize="15sp" />

                        <LinearLayout
                            android:id="@+id/districtl"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_margin="3dp"
                            android:layout_marginTop="2dp"
                            android:background="#fff"
                            android:elevation="4dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:gravity="center|center_vertical|center_horizontal"
                                android:padding="5dp"
                                android:text="District"
                                android:textColor="@color/darkblue" />

                            <com.doi.spinnersearchable.SearchableSpinner
                                android:id="@+id/district"
                                android:layout_width="match_parent"
                                android:layout_height="fill_parent"
                                android:layout_margin="10dp"
                                android:background="@drawable/customborder_dialog"
                                android:layout_weight="1"
                                android:fontFamily="@font/raleway_semibold"
                                android:textColor="@color/blue" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/tehsill"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_margin="3dp"
                            android:layout_marginTop="2dp"
                            android:background="#fff"
                            android:elevation="4dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:gravity="center|center_vertical|center_horizontal"
                                android:padding="5dp"
                                android:text="Tehsil"
                                android:textColor="@color/darkblue" />

                            <com.doi.spinnersearchable.SearchableSpinner
                                android:id="@+id/tehsil"
                                android:layout_width="match_parent"
                                android:layout_height="fill_parent"
                                android:layout_margin="10dp"
                                android:layout_weight="1"
                                android:background="@drawable/customborder_dialog"
                                android:fontFamily="@font/raleway_semibold"
                                android:textColor="@color/blue" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/blockl"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_margin="3dp"
                            android:layout_marginTop="2dp"
                            android:background="#fff"
                            android:elevation="4dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:gravity="center|center_vertical|center_horizontal"
                                android:padding="5dp"
                                android:text="Block"
                                android:textColor="@color/darkblue" />

                            <com.doi.spinnersearchable.SearchableSpinner
                                android:id="@+id/block"
                                android:layout_width="match_parent"
                                android:layout_height="fill_parent"
                                android:layout_margin="10dp"
                                android:background="@drawable/customborder_dialog"
                                android:layout_weight="1"
                                android:fontFamily="@font/raleway_semibold"
                                android:textColor="@color/blue" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/gml"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_margin="3dp"
                            android:layout_marginTop="2dp"
                            android:background="#fff"
                            android:elevation="4dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:gravity="center|center_vertical|center_horizontal"
                                android:padding="5dp"
                                android:text="Gram Panchayat"
                                android:textColor="@color/darkblue" />

                            <com.doi.spinnersearchable.SearchableSpinner
                                android:id="@+id/gp"
                                android:layout_width="match_parent"
                                android:layout_height="fill_parent"
                                android:layout_margin="10dp"
                                android:layout_weight="1"
                                android:background="@drawable/customborder_dialog"
                                android:fontFamily="@font/raleway_semibold"
                                android:textColor="@color/blue" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/placetol"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_margin="3dp"
                            android:layout_marginTop="2dp"
                            android:background="#fff"
                            android:elevation="4dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:gravity="center|center_vertical|center_horizontal"
                                android:padding="5dp"
                                android:text="Place Name"
                                android:textColor="@color/darkblue" />

                            <EditText

                                android:id="@+id/placenameto"
                                android:layout_width="match_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:background="@drawable/customborder_dialog"
                                android:gravity="center|center_vertical|center_horizontal"
                                android:padding="5dp"
                                android:textStyle="bold" />
                        </LinearLayout>


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@color/darkblue"
                            android:gravity="center|center_vertical|center_horizontal"
                            android:padding="10dp"
                            android:text="Pass Details"

                            android:textColor="@color/white"
                            android:textSize="15sp" />

                        <LinearLayout
                            android:id="@+id/passnol"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_margin="3dp"
                            android:layout_marginTop="2dp"
                            android:background="#fff"
                            android:elevation="4dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:gravity="center|center_vertical|center_horizontal"
                                android:padding="5dp"
                                android:text="Pass No"
                                android:textColor="@color/darkblue" />

                            <EditText
                                android:id="@+id/passno"
                                android:layout_width="match_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:background="@drawable/customborder_dialog"
                                android:gravity="center|center_vertical|center_horizontal"
                                android:inputType="number"
                                android:maxLines="1"
                                android:padding="5dp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/passissueauthorityl"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_margin="3dp"
                            android:layout_marginTop="2dp"
                            android:background="#fff"
                            android:elevation="4dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:gravity="center|center_vertical|center_horizontal"
                                android:padding="5dp"
                                android:text="Pass Issue Authority"
                                android:textColor="@color/darkblue" />

                            <EditText
                                android:id="@+id/authority"
                                android:layout_width="match_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:background="@drawable/customborder_dialog"
                                android:gravity="center|center_vertical|center_horizontal"
                                android:maxLines="1"
                                android:padding="5dp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/purposel"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_margin="3dp"
                            android:layout_marginTop="2dp"
                            android:background="#fff"
                            android:elevation="4dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:gravity="left|center_vertical|center_horizontal"
                                android:padding="5dp"
                                android:text="Purpose"
                                android:textColor="@color/darkblue" />

                            <EditText
                                android:id="@+id/purpose"
                                android:layout_width="match_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:maxLines="1"
                                android:background="@drawable/customborder_dialog"
                                android:gravity="left|center_vertical|center_horizontal"
                                android:inputType="textMultiLine"
                                android:padding="5dp"
                                android:textStyle="bold" />
                        </LinearLayout>


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@color/darkblue"
                            android:gravity="center|center_vertical|center_horizontal"
                            android:padding="10dp"
                            android:text="Other Information"

                            android:textColor="@color/white"
                            android:textSize="15sp" />

                        <LinearLayout
                            android:id="@+id/appdownloadl"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_margin="3dp"
                            android:layout_marginTop="2dp"
                            android:background="#fff"
                            android:elevation="4dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="49dp"
                                android:layout_weight="1"
                                android:gravity="center|center_vertical|center_horizontal"
                                android:padding="5dp"
                                android:text="Aarogya Setu App Downloaded"
                                android:textColor="@color/darkblue" />

                            <com.doi.spinnersearchable.SearchableSpinner
                                android:id="@+id/appdownloaded"
                                android:layout_width="match_parent"
                                android:entries="@array/yesno"
                                android:layout_height="fill_parent"
                                android:layout_margin="10dp"
                                android:background="@drawable/customborder_dialog"
                                android:layout_weight="1"
                                android:fontFamily="@font/raleway_semibold"
                                android:textColor="@color/blue" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/datel"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_margin="3dp"
                            android:layout_marginTop="2dp"
                            android:background="#fff"
                            android:elevation="4dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:gravity="center|center_vertical|center_horizontal"
                                android:padding="5dp"
                                android:text="Entry Date"
                                android:textColor="@color/darkblue" />

                            <TextView
android:id="@+id/date"
                                android:layout_width="match_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:gravity="center|center_vertical|center_horizontal"
                                android:padding="5dp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/timel"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_margin="3dp"
                            android:layout_marginTop="2dp"
                            android:background="#fff"
                            android:elevation="4dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:gravity="center|center_vertical|center_horizontal"
                                android:padding="5dp"
                                android:text="Entry Time"
                                android:textColor="@color/darkblue" />

                            <TextView
                                android:id="@+id/time"
                                android:layout_width="match_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:gravity="center|center_vertical|center_horizontal"
                                android:padding="5dp"
                                android:textStyle="bold" />
                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>
            </ScrollView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="0.2"
            android:orientation="vertical">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/layout"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/back"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1"
                    android:background="@color/darkblue"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="Back"
                    android:textColor="#ffffffff" />

                <Button
                    android:id="@+id/proceed"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="2dp"
                    android:layout_weight="1"
                    android:background="@color/green"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="Proceed"
                    android:textColor="#ffffffff" />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>